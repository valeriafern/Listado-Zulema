<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextCodigo"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:hint="Ingrese cÃ³digo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editTextCiudad"
        tools:layout_editor_absoluteX="66dp" />

    <EditText
        android:id="@+id/editTextCiudad"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:hint="Ingrese ciudad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCodigo"
        app:layout_constraintBottom_toTopOf="@id/editTextCodep"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="128dp" />

    <EditText
        android:id="@+id/editTextCodep"
        android:layout_width="283dp"
        android:layout_height="45dp"
        android:hint="Ingrese codedep"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCiudad"
        app:layout_constraintBottom_toTopOf="@id/btnInsertar"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/btnInsertar"
        android:layout_width="295dp"
        android:layout_height="39dp"
        android:text="Insertar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCodep"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
